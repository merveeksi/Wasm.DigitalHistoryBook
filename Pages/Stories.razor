@page "/stories"
@inject NavigationManager Navigation

<div class="text-center mb-8 mt-8">
    <h1 class="text-4xl font-bold">Tüm Hikayeler</h1>
    <p class="text-lg text-gray-600">Binlerce hikaye okumak için sizi bekliyoruz!</p>
</div>

<div class="flex justify-end mb-4">
    <input type="text" @bind="searchTerm" placeholder="Hikaye ara..." class="input input-bordered border-2 border-gray-300 rounded-full px-4 py-2" style="width: 300px; border-radius: 30px;" />
    <button class="btn btn-primary ml-2 border-2 rounded-full px-4 py-2" @onclick="SearchStories">Ara</button>
</div>

