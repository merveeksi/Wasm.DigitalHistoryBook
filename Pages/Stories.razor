<!-- Pagination -->
<div class="flex justify-between items-center mt-4">
    <button class="btn btn-primary" @onclick="ShowAllStories">Tümünü Gör</button>
    <div>
        <button @onclick="GoToPreviousPage" disabled="@(CurrentPage <= 1)" class="btn btn-secondary">
            ‹ Önceki
        </button>
        <span>@CurrentPage / @TotalPages</span>
        <button @onclick="GoToNextPage" disabled="@(CurrentPage >= TotalPages)" class="btn btn-secondary">
            Sonraki ›
        </button>
    </div>
</div>

<!-- Yukarı çıkma ok simgesi sağda -->
<div class="position fixed bottom-16 right-16">
    <span @onclick="ScrollToTop" style="cursor: pointer;">
        <i class="fa-sharp fa-solid fa-circle-chevron-up" style="font-size: 24px; color: green;"></i>
    </span>
</div>

<div class="pagination">
    <button @onclick="GoToPreviousPage" disabled="@(CurrentPage <= 1)">
        ‹ Previous
    </button>
    <span>@CurrentPage / @TotalPages</span>
    <button @onclick="GoToNextPage" disabled="@(CurrentPage >= TotalPages)">
        Next ›
    </button>
</div>
@code {
     [Parameter] public int CurrentPage { get; set; } = 1;
    [Parameter] public int TotalPages { get; set; }
    [Parameter] public EventCallback<int> OnPageChanged { get; set; }

    
    private void ShowAllStories()
    {
        // Tüm hikayeleri gösterme işlemi
        // Örneğin, tüm hikayeleri bir servisten almak için gerekli kodu ekleyin
    }
    

    private async Task GoToPreviousPage()
    {
        if (CurrentPage > 1)
        {
            CurrentPage--;
            await OnPageChanged.InvokeAsync(CurrentPage);
        }
    }

    private async Task GoToNextPage()
    {
        if (CurrentPage < TotalPages)
        {
            CurrentPage++;
            await OnPageChanged.InvokeAsync(CurrentPage);
        }
    }
    private string searchTerm = "";

    private void SearchStories()
    {
        // Arama işlemi burada gerçekleştirilecek
        // Örneğin, hikayeleri filtrelemek için bir servis çağrısı yapılabilir
    }

    private void OpenPdf()
    {
        // PDF açma işlemi burada gerçekleştirilecek
        // Örneğin, belirli bir PDF dosyasını açmak için gerekli kodu ekleyin
        NavigationManager.NavigateTo("pdf/JackLondon.pdf", true);
    }

    private void ScrollToTop()
    {
        // Sayfanın en üstüne kaydırma işlemi
        var top = "window.scrollTo(0, 0);";
        // JavaScript kodunu çalıştır
        JSRuntime.InvokeVoidAsync("eval", top);
    }
}