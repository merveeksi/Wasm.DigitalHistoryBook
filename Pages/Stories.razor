@page "/stories"
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<div class="text-center mb-8 mt-8">
    <h1 class="text-4xl font-bold">Tüm Hikayeler</h1>
    <p class="text-lg text-gray-600">Binlerce hikaye okumak için sizi bekliyoruz!</p>
</div>

